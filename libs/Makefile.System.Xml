BUILD_DIR = build
LIB_BASENAME = System.Xml
LIB_NAME = lib$(LIB_BASENAME).a
LIB_PATH = $(BUILD_DIR)

INCLUDE_DIR = ./include
SRC_DIR = ./src/cppdotnet
INC_PARAMS = $(INCLUDE_DIR:%=-I%) -I.
DEBUG_FLAGS = -g3

CXXFLAGS=-std=c++20 -W -Wall -pedantic -MMD -MP $(INC_PARAMS) $(DEBUG_FLAGS)

TARGET = $(BUILD_DIR)/$(LIB_NAME)

LIB_SRC  = $(SRC_DIR)/System/Xml/NameTable.cpp \
           $(SRC_DIR)/System/Xml/Private/DefaultNodeListImplementation.cpp \
           $(SRC_DIR)/System/Xml/XmlAttribute.cpp \
           $(SRC_DIR)/System/Xml/XmlAttributeCollection.cpp \
           $(SRC_DIR)/System/Xml/XmlDocument.cpp \
           $(SRC_DIR)/System/Xml/XmlElement.cpp \
           $(SRC_DIR)/System/Xml/XmlImplementation.cpp \
           $(SRC_DIR)/System/Xml/XmlLinkedNode.cpp \
           $(SRC_DIR)/System/Xml/XmlNode.cpp \
           $(SRC_DIR)/System/Xml/XmlNodeReader.cpp \
           $(SRC_DIR)/System/Xml/XmlReader.cpp \
           $(SRC_DIR)/System/Xml/XmlReaderSettings.cpp \
           $(SRC_DIR)/System/Xml/XmlTextReader.cpp \
           $(SRC_DIR)/System/Xml/XmlWriter.cpp \
           $(SRC_DIR)/System/Xml/XmlWriterSettings.cpp \
           $(SRC_DIR)/System/Xml/XmlTextWriter.cpp

LIB_OBJS = $(patsubst $(SRC_DIR)/%.cpp,$(BUILD_DIR)/%.o,${LIB_SRC})

LIB_DEP  = $(patsubst $(BUILD_DIR)/%.o,$(BUILD_DIR)/%.d,${LIB_OBJS})

.PHONY: all
all: lib
	@ar -crs $(TARGET) --record-libdeps "-lSystem.IO" $(LIB_OBJS)
	@ranlib $(TARGET)

$(BUILD_DIR):
	@mkdir -p $(BUILD_DIR)

.PHONY: lib
lib: $(TARGET) | $(BUILD_DIR)

$(TARGET): $(LIB_OBJS)
	@ar -crs $(TARGET) $(LIB_OBJS)
	@ranlib $(TARGET)

.PHONY: $(LIB_BASENAME)
$(LIB_BASENAME): $(LIB_OBJS)

$(BUILD_DIR)/%.o : $(SRC_DIR)/%.cpp
	@mkdir -p ${dir $@}
	$(CXX) -o $@ $< -c $(CPPFLAGS) $(CXXFLAGS)

default: lib

-include $(LIB_DEP)
