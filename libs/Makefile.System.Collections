BUILD_DIR = build
LIB_BASENAME = System.Collections
LIB_NAME = lib$(LIB_BASENAME).a
LIB_PATH = $(BUILD_DIR)

INCLUDE_DIR = ./include
SRC_DIR = ./src/cppdotnet
INC_PARAMS = $(INCLUDE_DIR:%=-I%) -I.
DEBUG_FLAGS = -g3
EXTERNAL_LIB_DEPS = libSystem.Base.a

CXXFLAGS=-std=c++20 -W -Wall -pedantic -MMD -MP $(INC_PARAMS) $(DEBUG_FLAGS)

TARGET = $(BUILD_DIR)/$(LIB_NAME)

LIB_SRC  = $(SRC_DIR)/System/Collections/Generic/Dictionary.cpp \
           $(SRC_DIR)/System/Collections/Generic/HashSet.cpp \
           $(SRC_DIR)/System/Collections/Generic/ICollection.cpp \
           $(SRC_DIR)/System/Collections/Generic/IDictionary.cpp \
           $(SRC_DIR)/System/Collections/Generic/IList.cpp \
           $(SRC_DIR)/System/Collections/Generic/KeyNotFoundException.cpp \
           $(SRC_DIR)/System/Collections/Generic/KeyValuePair.cpp \
           $(SRC_DIR)/System/Collections/Generic/LinkedList.cpp \
           $(SRC_DIR)/System/Collections/Generic/List.cpp \
           $(SRC_DIR)/System/Collections/Generic/OrderedDictionary.cpp \
           $(SRC_DIR)/System/Collections/Generic/SortedDictionary.cpp \
           $(SRC_DIR)/System/Collections/Generic/SortedSet.cpp \
           $(SRC_DIR)/System/Collections/Generic/Stack.cpp \
           $(SRC_DIR)/System/Collections/Specialized/StringCollection.cpp \
           $(SRC_DIR)/System/Collections/Specialized/StringDictionary.cpp

LIB_OBJS = $(patsubst $(SRC_DIR)/%.cpp,$(BUILD_DIR)/%.o,${LIB_SRC})

LIB_DEP  = $(patsubst $(BUILD_DIR)/%.o,$(BUILD_DIR)/%.d,${LIB_OBJS})

.PHONY: all
all: lib
	@ar -crs $(TARGET) --record-libdeps "-lSystem.Base" $(LIB_OBJS)
	@ranlib $(TARGET)

$(BUILD_DIR):
	@mkdir -p $(BUILD_DIR)

.PHONY: lib
lib: $(TARGET) | $(BUILD_DIR)

$(TARGET): $(LIB_OBJS)
	@ar -crs $(TARGET) $(LIB_OBJS)
	@ranlib $(TARGET)

.PHONY: $(LIB_BASENAME)
$(LIB_BASENAME): $(LIB_OBJS)

$(BUILD_DIR)/%.o : $(SRC_DIR)/%.cpp
	@mkdir -p ${dir $@}
	$(CXX) -o $@ $< -c $(CPPFLAGS) $(CXXFLAGS)

default: lib

-include $(LIB_DEP)